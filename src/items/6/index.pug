extend ../../includes/_layout.pug
block vars
  - var id = 1
  - var slug = 'pricing'
  - var title = `Pricing ${id}`
  - var bodyClass = 'mt-5 mb-5'
block append stylesheets
  link(rel='stylesheet', type='text/css', href=locals.cdns.bootstrap_4.css)
  link(rel='stylesheet', type='text/css', href=locals.cdns.iconmonstr)
  link(rel='stylesheet', type='text/css', href='./style.css')
block content
  section(class=`bpp-${slug}-${id}`)
    .container.text-center
      h2.bpp-title Pricing
      p.bpp-desc
        | No credit card required. Premium plan includes a 14-day free trial.
        br
        | Never worry again about tracking too many events.
      .row
        .col-md-6
          ul.list-group.bpp-plan
            li.list-group-item
              i.bpp-plan-icon.im.im-cube
              h4.bpp-plan-name Basic
              p.bpp-plan-desc Powerful insights for growing teams.
              h3.bpp-plan-cost Free
              a.bpp-plan-btn.btn.btn-primary(href="#") Get Started
            li.list-group-item 5,000 Sessions per Month
            li.list-group-item Email Support
            li.list-group-item 3 Month Data Retention
        .col-md-6
          ul.list-group.bpp-plan
            li.list-group-item
              i.bpp-plan-icon.im.im-cubes
              h4.bpp-plan-name Premium
              p.bpp-plan-desc Analytics infrastructure for your company.
              h3.bpp-plan-cost Custom pricing
              a.bpp-plan-btn.btn.btn-primary(href="#") Contact us
            li.list-group-item Every Analysis Feature
            li.list-group-item Millions of Sessions per Month
            li.list-group-item On-Site Support
            li.list-group-item Heap SQL
            li.list-group-item Single Sign-On
            li.list-group-item Data Science Consultant
            li.list-group-item Custom Data Retention
            li.list-group-item Service-Level Agreements
            li.list-group-item Invoice Billing
            li.list-group-item Custom Terms

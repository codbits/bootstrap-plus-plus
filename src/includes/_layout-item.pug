doctype html
html
  block vars
    - var title = `Item ${id}`
  head
    title Bootstrap #{title} - #{locals.title}
    meta(name="description", content="Free HTML, CSS, JS block template for Bootstrap framework")
    link(rel="canonical", href=`${locals.baseUrl}/items/${id}/`)
    block stylesheets
      link(rel='stylesheet', type='text/css', href=locals.cdns.bootstrap_4.css)
      link(rel='stylesheet', type='text/css', href='./style.css')
    block scripts
    block inlineStyle
  body(class=bodyClass)
    block content
      section(class="bpp-item-navbar p-3", style="z-index:999; position: fixed; right: 0; bottom: 0;")
        a(href=`${locals.baseUrl}/items/${id}/bpp-${id}.zip`, class="btn btn-primary", download) Download

    block scriptsFooter
    include _tracking.pug

doctype html
html
  block vars
    - var title = `Item ${id}`
  head
    title Bootstrap #{title} - #{locals.title}
    meta(name="description", content="Free HTML, CSS, JS block template for Bootstrap framework")
    link(rel="canonical", href=`${locals.baseUrl}/items/${id}/`)
    block stylesheets
      link(rel='stylesheet', type='text/css', href='https://fonts.googleapis.com/css?family=Roboto:400,500,700')
      link(rel='stylesheet', type='text/css', href=locals.cdns.bootstrap_4.css)
      link(rel='stylesheet', type='text/css', href='./style.css')
    block scripts
    block inlineStyle
  body(class=bodyClass)
    block content
    block scriptsFooter
    include _tracking.pug

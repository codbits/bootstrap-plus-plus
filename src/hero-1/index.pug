extend ../_layout.pug
block vars
  - var id = 1
  - var slug = 'hero'
  - var title = `Hero ${id}`
block append stylesheets
  link(rel='stylesheet', type='text/css', href=cdn.bootstrap_411.css)
  link(rel='stylesheet', type='text/css', href='style.css')
block append scripts
  script(async='', defer='', src=cdn.github.buttons)
  script(async='', defer='', src=cdn.twitter, charset='utf-8')
block content
  section(class=`bpp-${slug}-${id} d-flex align-items-center`)
